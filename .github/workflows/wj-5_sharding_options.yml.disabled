            REPORTS_DATA="${REPORTS_DATA}addReportEntry('${{ steps.run-info.outputs.run_number }}', '$CURRENT_TIMESTAMP', '$CURRENT_REASON');"
            seen_runs[${{ steps.run-info.outputs.run_number }}]=1
